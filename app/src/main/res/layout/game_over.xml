<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scores_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/game_over_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/game_over_scores_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46sp"
            android:textStyle="bold"
            android:textColor="#fc010002"
            android:text="@string/game_over_text"/>

        <TextView
            android:id="@+id/game_over_scores"
            android:textSize="160sp"
            android:text="60"
            android:textColor="#fc010002"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/game_over_points"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fc010002"
            android:textSize="46sp"
            android:text="@string/game_over_points"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/game_over_dialog_ok_btn"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ok_button" />
    </LinearLayout>
</RelativeLayout>