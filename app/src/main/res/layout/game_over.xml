<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scores_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/game_over_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/game_over_scores_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#fc010002"
            android:text="@string/game_over_text"/>

        <TextView
            android:id="@+id/game_over_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fc010002" />

        <ImageView
            android:id="@+id/game_over_picture"
            android:layout_marginTop="20dp"
            android:layout_width="280sp"
            android:layout_height="170dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/game_over_before_name_text"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fc010002"
            android:textSize="30sp"
            android:text="@string/game_over_memory_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/game_over_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fc010002"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/game_over_dialog_ok_btn"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ok_button" />

        <ImageButton
            android:id="@+id/game_over_share_btn"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/share" />
    </LinearLayout>
</RelativeLayout>